APP_NAME=AppHub API
APP_ENV=dev
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8500

# 로그
LOG_DIR=./logs
LOG_LEVEL=INFO

# DB (Async)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=AppHub
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# 개발 편의: true면 startup 시 create_all() 실행 (운영에서는 false)
APP_INIT_DB=false

# Swagger에 Knox 테스트를 쉽게 넣기 위한 헤더명
AUTH_KNOX_HEADER=x-knox-id

# 배치 집계(00:10 실행은 운영 스케줄러가 호출)
BATCH_TIMEZONE=Asia/Seoul
